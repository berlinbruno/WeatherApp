<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WeatherApp.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Dark=#001d3d,
                                      Light=#003566}">

    <VerticalStackLayout
        Margin="20"
        Spacing="0"
        VerticalOptions="Center">

        <Image
            HeightRequest="200"
            Source="icon.png"
            WidthRequest="200" />

        <Label
            FontSize="40"
            Text="Weather"
            TextColor="#ffca28" />

        <Label
            FontSize="40"
            Text="Forecast App"
            TextColor="White" />

        <Label
            FontSize="Medium"
            Text="Developed by Berlin"
            TextColor="GhostWhite" />
        <Button
            x:Name="GetStartedButton"
            Margin="0,50,0,0"
            BackgroundColor="Orange"
            Clicked="GetStartedButton_Clicked"
            FontSize="Large"
            Text="Get Started"
            WidthRequest="250" />
    </VerticalStackLayout>

</ContentPage>